<h3>Licens</h3>
<div class="row">
    <div class="col-sm-6">
        <div class="form-group">
            <select class="form-control" name="license" id="license_select">
                <option value="CC0" <%= (typeof(post) !== 'undefined' && post.post.license == 'CC0') ? 'selected=selected' : '' %>>CC0</option>
                <option value="CC BY" <%= (typeof(post) !== 'undefined' && post.post.license == 'CC BY') ? 'selected=selected' : '' %>>CC BY (Creative Commons)</option>
                <option value="Copyright" <%= (typeof(post) !== 'undefined' && post.post.license == 'Copyright') ? 'selected=selected' : '' %>>Copyright</option>
            </select>
        </div>



        <div id="license_info">
            <div class="input-group cc-version">
                <span class="input-group-addon">CC-version</span>
                <input type="text" class="form-control" name="license_cc_version" value="<%= (typeof(post) !== 'undefined') ? post.post.license_cc_version : '' %>">
            </div>
            <div class="input-group license-owner">
                <span class="input-group-addon">Licensägare</span>
                <input type="text" class="form-control" name="license_holder" value="<%= (typeof(post) !== 'undefined') ? post.post.license_holder : '' %>">
            </div>
            <div class="input-group license-owner-website">
                <span class="input-group-addon">Ägarens hemsida</span>
                <input type="text" class="form-control" name="license_holder_website" placeholder="http://" value="<%= (typeof(post) !== 'undefined') ? post.post.license_holder_website : '' %>">
            </div>
        </div>
    </div>
</div>