<div class="col-sm-6">
    <h2>
        <span class="glyphicon glyphicon-phone"></span>
        Kontakt
    </h2>
    <div class="row">
        <div class="col-sm-12">
            <div class="input-group">
                <span class="input-group-addon">Telefon</span>
                <input type="text" class="form-control" name="phone" value="<%= (typeof(post) !== 'undefined') ? post.post.phone : '' %>">
            </div>
            <div class="input-group">
                <span class="input-group-addon">Epost</span>
                <input type="text" class="form-control" name="email" value="<%= (typeof(post) !== 'undefined') ? post.post.email : '' %>">
            </div>
        </div>
    </div>
</div>